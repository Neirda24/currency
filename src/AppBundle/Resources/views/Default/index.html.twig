{% extends '::base.html.twig' %}

{% block body %}
    {% for product in products %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{ product.name }}</h3>
        </div>
        <div class="panel-body">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <ul>
                            <li><span>Price: </span>{{ product|convert_price|format_price }}</li>
                            <li>Expiration date: {{ product.expiryDate|date('Y-m-d') }}</li>
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <form class="form-inline" method="post" action="{{ path('list_products') }}" role="form">
                            <div class="container">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <input type="number" class="form-control" id="nb_{{ product.id }}" name="nb_{{ product.id }}" value="0" />
                                    </div>
                                    <button class="btn btn-default" type="submit">Add to my basket</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% else %}
        <div class="alert alert-danger" role="alert">
            It seems we don't have any products...
        </div>
    {% endfor %}
{% endblock body %}

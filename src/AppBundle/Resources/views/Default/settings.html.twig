{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <form method="post" action="{{ path('edit_settings') }}" role="form">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_errors(choose_currency_form.currency) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="{{ choose_currency_form.currency.vars.id }}">Currency *</label>
                        </div>
                        <div class="col-md-10">
                            {{ form_widget(choose_currency_form.currency, {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }) }}
                        </div>
                    </div>
                </div>
                {{ form_rest(choose_currency_form) }}
                <div class="col-md-6 text-center">
                    <button type="submit" class="btn btn-danger">Envoyer</button>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock body %}
